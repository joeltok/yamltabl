{
  "name": "yamltabl-vscode-extension",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/vscode-extension/src",
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ],
      "options": {
        "commands": [
          "mkdir -p tmp",
          "node {projectRoot}/tools/build-e2e.js",
          "vscode-test --config {projectRoot}/.vscode-test.mjs"
        ],
        "parallel": false
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "node {projectRoot}/tools/build-src.js --watch",
          "sleep 1 && cp {projectRoot}/samples/fixtures/* {projectRoot}/samples/playground/",
          "sleep 1 && cp {projectRoot}/package.json dist/packages/vscode-extension/package.json",
          "sleep 2 && code {projectRoot}/samples/playground --extensionDevelopmentPath=${PWD}/dist/packages/vscode-extension"
        ],
        "parallel": true
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "node {projectRoot}/tools/build-src.js --production",
          "mkdir -p dist/packages/vscode-extension/samples/fixtures",
          "cp {projectRoot}/README.md dist/packages/vscode-extension/README.md",
          "cp {projectRoot}/package.json dist/packages/vscode-extension/package.json",
          "cp {projectRoot}/samples/fixtures/basic.md dist/packages/vscode-extension/samples/fixtures/basic.md"
        ],
        "parallel": false
      }
    }
  }
}
