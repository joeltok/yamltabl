{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "customConditions": ["development"],
    "paths": {
      "@yamltabl/yamltabl": ["packages/npm-package/src/index.ts"],
      "@yamltabl/yamltabl-core": ["packages/core/src/index.ts"]
    }
  }
}
